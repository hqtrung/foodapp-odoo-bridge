# FoodOrder Bridge API - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# Odoo ERP Configuration (Required)
# ========================================
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_username@company.com
ODOO_API_KEY=your_api_key_here

# ========================================
# API Configuration
# ========================================
API_TITLE=FoodOrder Bridge API
API_VERSION=1.0.0
API_DESCRIPTION=Bridge API between FoodOrder frontend and Odoo ERP

# ========================================
# Server Configuration
# ========================================
# Port for the API server (default: 8000)
PORT=8000

# Host binding (default: 0.0.0.0 for Docker)
HOST=0.0.0.0

# Environment: development, staging, production
ENVIRONMENT=production

# Debug mode (true/false)
DEBUG=false

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Cache Configuration
# ========================================
# Cache directory path (for local development)
CACHE_DIR=cache

# Cache TTL in hours (default: 24 hours)
CACHE_TTL_HOURS=24

# Firestore collection prefix (for Cloud Run deployment)
FIRESTORE_COLLECTION_PREFIX=foodorder_cache

# Auto-reload cache on startup (true/false)
AUTO_RELOAD_CACHE=true

# ========================================
# Image Configuration
# ========================================
# Public images directory
IMAGES_DIR=public/images

# Maximum image size in bytes (default: 5MB)
MAX_IMAGE_SIZE=5242880

# ========================================
# Security Configuration
# ========================================
# CORS allowed origins (comma-separated)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080,https://*.patedeli.com,https://patedeli.com

# CORS allow credentials (true/false)
CORS_ALLOW_CREDENTIALS=true

# CORS allowed methods (comma-separated)
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS allowed headers (comma-separated)
CORS_ALLOW_HEADERS=*

# API rate limiting (requests per minute)
MAX_REQUESTS_PER_MINUTE=100

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30

# Connection pool size for Odoo XML-RPC
CONNECTION_POOL_SIZE=10

# ========================================
# Monitoring & Health Checks
# ========================================
# Enable metrics endpoint (true/false)
ENABLE_METRICS=true

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=30

# ========================================
# Translation Configuration
# ========================================
# Enable automatic translation (true/false)
ENABLE_TRANSLATION=true

# Default language (Vietnamese)
DEFAULT_LANGUAGE=vi

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=vi,en,fr,it,es,zh,zh-TW,th,ja

# Google Cloud Project ID (required for Translation API)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Translation cache TTL in days (default: 7 days)
TRANSLATION_CACHE_TTL_DAYS=7

# Maximum translation batch size
MAX_TRANSLATION_BATCH_SIZE=50

# Google Cloud credentials file path (optional if using service account key)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ========================================
# Logging Configuration
# ========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# Enable access logs (true/false)
ENABLE_ACCESS_LOGS=true

# ========================================
# Performance Configuration
# ========================================
# Maximum image size in bytes (5MB default)
MAX_IMAGE_SIZE_BYTES=5242880

# Cache cleanup interval in hours
CACHE_CLEANUP_INTERVAL_HOURS=24

# ========================================
# Development Configuration
# ========================================
# Debug mode (true/false)
DEBUG=false

# Auto-reload on code changes (true/false)
RELOAD=false

# ========================================
# Health Check Configuration
# ========================================
# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=30

# ========================================
# Docker-specific (when using Docker)
# ========================================
# Docker secrets directory (if using Docker secrets)
DOCKER_SECRETS_DIR=/run/secrets