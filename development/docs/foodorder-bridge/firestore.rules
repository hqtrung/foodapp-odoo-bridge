rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to food ordering cache collections
    // These contain public product and category data
    match /foodorder_cache_categories/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    match /foodorder_cache_products/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    match /foodorder_cache_attributes/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    match /foodorder_cache_attribute_values/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    match /foodorder_cache_product_attributes/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    match /foodorder_cache_metadata/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // Allow read access to any other cache collections that might be added
    match /foodorder_cache_{cache_type}/{document} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }

    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}